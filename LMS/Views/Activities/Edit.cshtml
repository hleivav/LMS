@model LMS.Core.Entities.ViewModels.ActivityViewModel

@{
    ViewData["Title"] = "Edit";
}
<section class="backgroundphoto">
<div class="container1 inline-block">

<h1 style="color: #293a7d;">Edit this activity </h1>
<hr />

<form  asp-action="Edit">
<div class="row">
        <div class="col-6">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <input type="hidden" asp-for="@Model.Id" />
             <input type="hidden" asp-for="@Model.ForwardCourseId" />
            <div class="pb-3 text-center">
                  <h4>Activity</h4>
            </div>
            <label asp-for="ActivityTypeId" class="control-label"></label>
            <div class="form-group">
                <select asp-for="ActivityTypeId" class="form-control" asp-items="ViewBag.ActivityTypeId"></select>
                <span asp-validation-for="ActivityTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" asp-for="Month"  class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div> 
            <div class="pt-5">
                   <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="pt-5">
                 <a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.ForwardCourseId">Back to Modules and ativities</a>
            </div>
        </div>
         <div class="col-6">
            <div class="form-group">
                <div class="pb-3 text-center">
                   <h4>Document</h4>
                </div>
                <div class="row p-3  float-End">
                   <input class="form-control" type="file" id="formFile">
            </div>  
            <br />
             <div class="form-group">
           
                <input type="submit" value="Save" class="btn btn-success" />|
                <a class="btn btn-danger" asp-controller="Activities" asp-action="Delete"
                         asp-route-id="@Model.Id" asp-route-forwardId="@Model.ForwardCourseId">Delete</a>

                <button class="btn btn-outline-success "> <a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.ForwardCourseId">Back to modules and ativities</a></button>
           

                 

            </div>
        </div>
        
        </form>
    </div>
    </div>
    </section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
