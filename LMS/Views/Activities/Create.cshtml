    ViewData["Title"] = "Create";
}

<section class="backgroundphoto">
    <div class="container1 inline-block">

<h3 style="color: #293a7d;">Create a new activity</h3>
<hr />
<form asp-controller="Activities" asp-action="Create">
<div class="row">
    <div class="col-md-12">
        @*<form asp-controller="Activities" asp-action="Create">*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.ModuleId" />
            <input type="hidden" asp-for="@Model.ForwardCourseId" />
            <div class="form-group">
                <select asp-for="ActivityTypeId" class="form-control" asp-items="ViewBag.ActivityTypeId"></select>
                <span asp-validation-for="ActivityTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

             <div class="pb-2 text-center">
              <h4 class="fw-bold">Document</h4>
            </div>
            <div class="row p-1  float-End">
                   <input class="form-control" type="file" id="formFile">
            </div>
            <div class="pt-3">
                   <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="pt-5">
               <a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.ForwardCourseId">Back to Modules and ativities</a>
            </div>
            </form>
